<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/blue</item>
        <item name="titleMarginStart">150dp</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowLightStatusBar">@android:color/background_light</item>



    </style>
    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:colorForeground">@color/blue</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>